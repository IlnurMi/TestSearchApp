<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_avatar"
        android:layout_width="@dimen/im_width"
        android:layout_height="@dimen/im_height"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_18sp"
        android:textColor="@color/textColor"
        android:layout_marginStart="@dimen/margin_top_logout"
        app:layout_constraintStart_toEndOf="@id/item_avatar"
        app:layout_constraintTop_toTopOf="@id/item_avatar"
        app:layout_constraintBottom_toBottomOf="@id/item_avatar"/>

</androidx.constraintlayout.widget.ConstraintLayout>